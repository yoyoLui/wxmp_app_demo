body {
  margin: 0;
  padding: 0;
}

.BombBox_mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

.BombBox_mask .BombBox {
  width: 100%;
  height: auto;
  padding: 0 32px;
  box-sizing: border-box;
  background-color: transparent;
}

.BombBox_mask .BombBox .ticket_body_content {
  width: 100%;
}

.BombBox_mask .BombBox .ticket_body_content .head image,
.BombBox_mask .BombBox .ticket_body_content .foot image {
  display: block;
  width: 100%;
  margin: 0;
  height: auto;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body {
  width: 100%;
  padding: 16px 16px 0 16px;
  box-sizing: border-box;
  background-color: #fe8138;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content {
  width: 100%;
  height: 100%;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item {
  position: relative;
  width: 100%;
  height: 4.625rem;
  margin-bottom: 12px;
  color: #f5680a;
  background-color: #fff;
  padding: 1rem;
  box-sizing: border-box;
  border-radius: 0 0 2px 2px;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item image.decorations {
  position: absolute;
  top: -3px;
  left: 0;
  width: 100%;
  height: 4px;
  z-index: 4;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item .triangle_j {
  position: absolute;
  right: -0.25rem;
  top: -0.25rem;
  height: 1rem;
  width: 3rem;
  background-color: black;
  opacity: 0.6;
  z-index: 9;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item .triangle_j .text {
  font-size: 0.75rem;
  color: #fff;
  top: 0;
  right: 0;
  margin: 0 0.5rem;
  letter-spacing: 1px;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item image.triangle {
  position: absolute;
  right: -0.25rem;
  top: 0.75rem;
  width: 0.25rem;
  z-index: 9;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item image.carwash {
  position: absolute;
  width: 4.625rem;
  height: 3.75rem;
  bottom: 0;
  right: 4.75rem;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item .ticket_item_left {
  height: 100%;
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item .ticket_item_left .ticket_item_name {
  display: flex;
  flex-direction: column;
  font-family: PingFangSC-Semibold;
  font-size: 1.06rem;
  font-weight: bold;
  line-height: 1.06rem;
  height: 1.06rem;
  margin-bottom: 0.5rem;
}

.BombBox_mask .BombBox .ticket_body_content .ticket_body .ticket_body_content .ticket_item .ticket_item_left .ticket_item_detail {
  display: flex;
  flex-direction: column;
  font-size: 0.875rem;
  line-height: 0.875rem;
  height: 0.875rem;
  color: rgba(0, 0, 0, 0.56);
}

.ticket_item_value {
  position: absolute;
  width: 5rem;
  /* max-width: 5rem; */
  height: 50px;
  bottom: 1.2rem;
  right: 1rem;
  font-size: 2.62rem;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}

.ticket_item_value > view {
  position: relative;
  margin: 0;
  display: flex;
  align-items: flex-end;
  line-height: 0.7;
  text-align: right;
  /* display: inline-block; */
    justify-content: flex-end;
}

.ticket_item_value .ticket_item_value_unit {
  /* display: flex; */
  width: 1rem;
  font-size: 1.2rem;
}

.ticket_item_value .ticket_item_value_no {
  /* display: flex; */
  min-width: 1rem;
  font-size: 2.62rem;
  margin-left: 0.3rem;
}

.ticket_item_value .ticket_item_value_discount {
  width: 5rem;
  /* display: flex; */
  font-size: 1rem;
  letter-spacing: 2px;
}

