/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.common_container{
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}
/*toast start*/
.line {
  height: 1rpx;
  background-color: rgb(233, 233, 233);
}

.wxapp-toast-mask {
  opacity: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 888;
}

.wxapp-toast-content-box {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;  
  position: fixed;
  z-index: 9999;
  top: 0;
}

.wxapp-toast-content {
  width: 50%;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
}

.wxapp-toast-content-text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
/*toast end*/

/* 弹窗 start */
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -100px 50rpx 0 50rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pop_title {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  color: #222;
  font-weight: bold;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid rgba(233, 233, 233,.6);
}
.pop_title text{
  display: block;
  margin: 40rpx 32rpx;
}
.pop_btn {
  width: 100%;
  height: 96rpx;
  font-size: 34rpx;
  color: #ff7a21;
  font-weight: bold;
  text-align: center;
  line-height: 90rpx;
}
/* 弹窗 end */