@import "../../common/common.wxss";

page {
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.edit_text_div {
  height: 192rpx;
  background-color: white;
  margin-top: 32rpx;
  border-top: 1rpx solid rgb(233, 233, 233);
  position: relative;
}

.input_text {
  width: 514rpx;
  height: 96rpx;
  position: absolute;
  top: 24rpx;
  right: 32rpx;
}

.title {
  width: 200rpx;
  justify-content: center;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.54);
  position: absolute;
  left: 32rpx;
  top: 24rpx;
}

.input_text,.input_num {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #222;
}

.text_length {
  position: absolute;
  right: 32rpx;
  bottom: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.26);
}

.text_placeholder {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.26);
}

.edit_num_div {
  height: 104rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx solid rgb(233, 233, 233);
  padding: 0 32rpx;
}

.edit_num_div text {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.54);
  margin-right: 36rpx;
}
.edit_num_div input{
  width: 450rpx;
}

button {
  margin-top: 48rpx;
}
.clear_div{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.clear_div image{
  width: 30rpx;
  height: 30rpx;
}

.saveBtn{
  margin-top: 64rpx;
  background-color: #ff7a21;
  font-size: 34rpx;
  color: #fff;
  font-weight: 500;
  margin: 50rpx 32rpx;
}
