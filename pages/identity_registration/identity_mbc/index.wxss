page {
  background-color: #f3f4f5;
  overflow-y: hidden;
}

.upImg {
  width: 100%;
  height: 100%;
  top: 0;
  position: fixed;
  margin-bottom: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.zheng {
  width: 90%;
  height: 460rpx;
  background-color: #fff;
  border-radius: 5px;
  margin: 0;
  text-align: center;
}
.zheng:first-child{
  margin-bottom: 40rpx;
}
.zheng>image {
  width: 100%;
  height: 460rpx;
}

.bottom_view {
  height: 160rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom_view>button {
  background-color: #ff7a21;
  color: #fff;
  width: 90%;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  background-color: #ccc;
  color: #fff;
}

canvas {
  margin-top: 2000rpx;
}
