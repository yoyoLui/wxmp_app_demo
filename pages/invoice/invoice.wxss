
.msg-item {
  width: 100%;
  height: 128rpx;
  border-bottom: 1rpx solid rgb(233, 233, 233);
  position: relative;
  left: 0;
  top: 0;
  overflow: hidden;
}

.msg {
  position: absolute;
  width: 100%;
  height: 128rpx;
  left: 0;
  top: 0;
  z-index: 100;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.msg-menu {
  position: absolute;
  width: 100%;
  height: 128rpx;
  left: 0;
  top: 0;
  z-index: 0;
}

.menu-delete {
  position: absolute;
  width: 150rpx;
  height: 128rpx;
  top: 1rpx;
  right: 0;
  background-color: #FF2D55;
  color: #fff;
  text-align: center;
  line-height: 128rpx;
  font-size: 34rpx;
}

.left {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 32rpx;
}

.right {
  width: 40rpx;
  margin-right: 32rpx;
}

.right image {
  width: 40rpx;
  height: 40rpx;
}

.select_invoice_title, .unselect_invoice_title {
  margin: 24rpx 0 16rpx 32rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.54);
  font-family: PingFangSC-Regular;
}

.invoice_name {
  font-size: 34rpx;
  color: #222;
  font-family: PingFangSC-Regular;
}

.invoice_num {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.54);
}

/* add invocie btn */

.add_invoice_btn {
  height: 104rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.add_invoice_btn image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 38rpx;
  margin-right: 14rpx;
}

.add_invoice_btn text {
  color: #ff7a21;
  font-size: 32rpx;
  letter-spacing: 0;
  font-weight: 100;
}

.unselect_invoice_item {
  height: 104rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.unselect_invoice_item text {
  flex: 1;
  margin: 32rpx;
  color: rgba(0,0,0,0.54);
  font-size: 34rpx;
}

